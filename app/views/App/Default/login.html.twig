{% extends 'App/_layout.html.twig' %}
{% block content %}
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center">
            {% if not app.user %}
            <h1>{{'login_msg'|trans}}</h1>
            <p>{{'login_sub_msg'|trans}}</p>
            <a class="btn btn-fb" href="{{ login_paths.facebook }}"><i class="fa fa-facebook-official fa-lg"></i>{{'login_with_fb'|trans}}</a>
            {% endif %}
        </div>
    </div>
  {% if error %}
  <!--<p class="text-danger">{{ error }}</p>-->
  {% endif %}
</div>
{% endblock %}
